<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_word_page_3"
    android:weightSum="10"
    android:orientation="vertical" >
    

     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3.4">
        
    <RelativeLayout
        android:id="@+id/rlTop"
        style="@style/registerTopLayout" >

         <ImageView
            android:id="@+id/ivLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/return_ic" />
         
        <TextView
            android:id="@+id/dev_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/WifiAmplifer"
            android:textColor="@color/white"
            android:textSize="22sp" />
       
    </RelativeLayout>
    
    <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/head_top_1">
            
     </LinearLayout> 
    
   </LinearLayout>
   
 
    
  <LinearLayout 
  	android:layout_width="match_parent"
  	android:layout_height="0dp"
  	android:layout_weight="5.1"
  	android:weightSum="6"
  	android:orientation="vertical">
         
     <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="@color/text_gray" />
     
    <RelativeLayout 
	   android:layout_width="match_parent"
	   android:layout_height="0dp"
	   android:layout_weight="1">
        
	  <TextView
	     android:id="@+id/pro_id"
	     android:layout_alignParentLeft="true"
         android:layout_width="100dp"
         android:layout_height="match_parent"
		 android:layout_centerVertical="true"
		 android:layout_marginLeft="10dp"
         android:gravity="center_vertical"
         android:textColor="@color/text_blue"
         android:text="@string/music_pro_name" />

     <TextView
         android:id="@+id/pro_dev_id"
         android:layout_toRightOf="@+id/pro_id"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_centerVertical="true"
         android:gravity="center_vertical"
         android:textColor="@color/text_blue" />
     
     <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="10dp" />
	</RelativeLayout>
	
	 <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="@color/text_gray" />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
     
      <TextView
          android:id="@+id/r_ssid_name"
          android:layout_alignParentLeft="true"
         android:layout_width="100dp"
         android:layout_marginLeft="10dp"
         android:layout_height="match_parent"
         android:layout_centerVertical="true"
         android:gravity="center_vertical"
         android:textColor="@color/text_blue"
         android:text="@string/music_r_ssid" />
        
       <TextView
         android:id="@+id/r_ssid"
         android:layout_toRightOf="@+id/r_ssid_name"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_centerVertical="true"
         android:gravity="center_vertical"
         android:textColor="@color/text_blue" />
      
       
       	<ImageView
       	    android:id="@+id/sign"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/lock"
            android:layout_margin="10dp" />
       
       	<ImageView
       	    android:id="@+id/lock"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="10dp" />
         
         
            
    </RelativeLayout>	
	<LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="@color/text_gray" />
	
    <RelativeLayout
        android:id="@+id/music_ssid" 
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1">
         
     <TextView
         android:id="@+id/dev_ssid_name"
         android:layout_alignParentLeft="true"
         android:layout_width="100dp"
         android:layout_marginLeft="10dp"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:gravity="center_vertical"
         android:textColor="@color/text_blue"
         android:text="@string/music_d_ssid" />
     <TextView 
         android:layout_toRightOf="@+id/dev_ssid_name"
         android:id="@+id/dev_ssid"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_centerVertical="true"
         android:gravity="center_vertical"
         android:textColor="@color/text_blue"/>
     
      <ImageView
          	android:id="@+id/press_id"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/arrow_right_blue" />
      
            <!--  
            android:src="@drawable/arrow_right_blue" />
            -->
            
    </RelativeLayout>
    
     <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="@color/text_gray" />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
      <TextView
          android:id="@+id/info_id"
         android:layout_alignParentLeft="true"
         android:layout_width="100dp"
         android:layout_marginLeft="10dp"
         android:layout_centerVertical="true"
         android:gravity="center_vertical"
         android:layout_height="match_parent"
         android:textColor="@color/text_blue"
         android:text="@string/device_mac" />
      
      <TextView
         android:id="@+id/mac_info"
         android:layout_toRightOf="@+id/info_id"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_centerVertical="true"
         android:gravity="center_vertical"
         android:textColor="@color/text_blue" />
        
     <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="10dp" />
         
    </RelativeLayout>
    
     <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="@color/text_gray" />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
      <TextView
         android:id="@+id/info_id"
         android:layout_alignParentLeft="true"
         android:layout_width="100dp"
         android:layout_marginLeft="10dp"
         android:layout_height="match_parent"
         android:layout_centerVertical="true"
         android:gravity="center_vertical"
         android:textColor="@color/text_blue"
         android:text="@string/music_versions" />
      
      <TextView
         android:id="@+id/version_info"
         android:layout_toRightOf="@+id/info_id"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_centerVertical="true"
         android:gravity="center_vertical"
         android:textColor="@color/text_blue" />
        
     <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="10dp" />
         
    </RelativeLayout>
    

    
     <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="@color/text_gray" />
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">

       <Button
           android:id="@+id/reboot"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:layout_marginLeft="5dp"
           android:layout_marginRight="5dp"
           android:background="@color/grey_word_page_4"
           android:textColor="@color/white"
           android:text="@string/reset" />

       <Button
           android:id="@+id/reset"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:layout_marginRight="5dp"
           android:layout_marginLeft="5dp"
           android:background="@color/grey_word_page_4"
           android:textColor="@color/white"
           android:text="@string/restart" />
   	      
    </LinearLayout>
  
  	</LinearLayout> 
  	
	
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@drawable/bottom">
    </RelativeLayout>
    
</LinearLayout>
