<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_word_page_3"
    android:orientation="vertical" >
    
    
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3.5">
        
         <RelativeLayout
        android:id="@+id/rlTop"
        style="@style/registerTopLayout" >


       <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/return_ic" /> 
         
         
        <TextView
            android:id="@+id/dev_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/wifi_config"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <!--
         <ImageView
            android:id="@+id/ivclose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/head_close" />
          -->
        
       
    </RelativeLayout>
    
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/head_top_1">
            
        </LinearLayout> 
        
    </LinearLayout>
    
     <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:background="@color/grey_word_page_3"
         android:layout_weight="4.9">
         
     <TextView
        android:id="@+id/route_id"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:background="@color/white"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="@color/background_blue"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:text="路由器名称:" />
    
    <TextView
        android:id="@+id/tvSsid"
        android:layout_toRightOf="@+id/route_id"
        android:layout_alignTop="@+id/route_id"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:textColor="@color/background_blue"
        android:layout_width="match_parent" />
    
     <TextView
        android:id="@+id/route_pw"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textColor="@color/background_blue"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/route_id"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:textSize="15sp"
        android:gravity="center"
        android:text="路由器密码:" />
     
     
     <!-- 
     
      <ToggleButton 
        android:id="@+id/tbPswFlag"
        android:layout_below="@+id/route_id" 
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:background="@drawable/toggle_selector"
        android:textOn=""
	    android:textOff=""/>
     
 
      <EditText 
        android:id="@+id/etInputPsw"
        android:layout_below="@+id/route_id"
        android:layout_toRightOf="@+id/route_pw"
        android:layout_toLeftOf="@+id/tbPswFlag"
        android:layout_marginTop="35dp"
        android:layout_height="35dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"/>
      -->
     
    
       <EditText 
        android:id="@+id/etInputPsw"
        android:layout_below="@+id/route_id"
        android:layout_toRightOf="@+id/route_pw"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"/>
       
       
       <ToggleButton 
        android:id="@+id/tbPswFlag"
        android:layout_below="@+id/etInputPsw" 
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:background="@drawable/toggle_selector3"
        android:textOn=""
	    android:textOff=""/>
      

      <Button
          android:id="@+id/btnNext"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_marginLeft="80dp"
          android:layout_below="@+id/tbPswFlag"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="10dp"
          android:background="@color/background_blue"
          android:textColor="@color/white"
          android:text="配置" />
      
         
     </RelativeLayout>
     
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:background="@drawable/bottom">
    </RelativeLayout>
    
    
</LinearLayout>
